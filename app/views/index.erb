<h1>Coffee shop cash register</h1>
<h2>Menu</h2>
<ul>
  <% @menu.each do |item| %>
    <li><a class="order_item" href="#"><%= item %></a></li>
  <% end %>
</ul>
<h2>Current Order</h2>
<p>VAT: <%= @order.tax_percentage %>%</p>
<p>Table Number: <%= @order.table_number %></p> 
<p>Customer(s):</p>
<ul>
  <% @order.customers.each do |customer| %>
    <li><%= customer %></li>
  <% end %>
</ul> 
<ul>
  <% @order.line_order.each do |order_item| %>
    <li><%= order_item[0] %></li>
    <li><%= order_item[1] %></li>
  <% end %>  
</ul>
<p>Total: Â£<%= @order.total %></p>

<h2>Receipt</h2>
<p><%= @receipt.date %></p>
<p><%= @shop_name %></p>
<p><%= @address %></p>
<p>Phone: <%= @phone %></p>
